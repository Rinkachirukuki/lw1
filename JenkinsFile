pipeline {
    agent any

    tools {
       maven "3.8.1"
    }

    stages {
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean install -DskipTests'
            }
        }

        stage('Pack') {
            steps {
                bat 'cd "D:\\GitHub\\Lw1_SWdev\\target" && tar -c -f "%BUILD_FOLDER%\\%BUILD_NUMBER%.zip" "*"'
      }
    }
    }

}