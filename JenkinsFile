pipeline {
    agent any

    tools {
       maven "3.8.1"
    }

    stages {
        stage('Build') {
            steps {
                bat 'mvn clean install -DskipTests'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

        stage('pack') {
      steps {
        bat 'cd "F:/LW1" && tar -c -z -f "%BUILD_FOLDER%/%BUILD_NUMBER%.zip" "./*"'
      }
    }
    }

}